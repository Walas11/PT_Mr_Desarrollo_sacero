@model PT_Mr_Desarrollo.Infraestructura.DataBase.Entities.UsuarioEntity.UsuarioEntity

<h2>Actualizar Usuario</h2>

<form method="post" asp-action="UpdateUser" asp-route-id="@Model.ID">
    <div class="form-group">
        <label for="NombreCompleto">Nombre Completo</label>
        <input type="text" class="form-control" asp-for="NombreCompleto" />
        <span asp-validation-for="NombreCompleto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="TipoDocumento">Tipo de Documento</label>
        <input type="text" class="form-control" asp-for="TipoDocumento" />
        <span asp-validation-for="TipoDocumento" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Documento">Documento</label>
        <input type="number" class="form-control" asp-for="Documento" />
        <span asp-validation-for="Documento" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="FechaNacimiento">Fecha de Nacimiento</label>
        <input type="date" class="form-control" asp-for="FechaNacimiento" />
        <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="ValorGanar">Valor a Ganar</label>
        <input type="number" class="form-control" asp-for="ValorGanar" step="0.01" />
        <span asp-validation-for="ValorGanar" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="EstadoCivil">Estado Civil</label>
        <input type="text" class="form-control" asp-for="EstadoCivil" />
        <span asp-validation-for="EstadoCivil" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Actualizar</button>
</form>